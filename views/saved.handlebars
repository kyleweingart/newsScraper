<div class="articles">
    {{#if article}}
       {{#each article}}
    <div class=card>
        <img class="card-img-top" src="liverbird.png" alt="Card image cap">
        <div class="card-body">
            <a href={{this.link}}>
                <h6 class="card-title"> {{this.title}} </h6>
            </a>
            <p class="card-text"> {{this.summary}} </p>
            <p class="byline">By: {{this.byline}}</p>
            <button type="button" class="save btn-outline-danger btn" data-toggle="modal" data-target="commentModal{{this._id}}" data-id={{this._id}}>Comment</button>
            <button type="button" class="btn btn-outline-dark delete" data-id={{this._id}}>Remove</button>
        </div>
    </div>
      {{/each}}
    {{else}}
    <h4>No Saved Articles</h4>
    {{/if}}



</div>

{{!-- Comment modal --}}

{{#each article}}
  {{comment-modal}}
{{/each}}